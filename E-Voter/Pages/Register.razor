@page "/register"
@using System.ComponentModel.DataAnnotations

<MudCard>
	<MudCardHeader>
		<MudText Typo=Typo.h3 Align=Align.Center>
			Register
		</MudText>
	</MudCardHeader>
	<MudCardContent>
		<MudForm @ref="form" @bind-Errors="@errors" @bind-IsValid="@success">
			<MudTextField T="string" @bind-Value="@model.email" Required RequiredError="Please Provide a Email"
						  Label="Email" Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" />
			<MudTextField T="string" @bind-Value="@model.password" Required
						  RequiredError="Please Provide a password" Label="Email" InputType="InputType.Password" />
			<MudTextField T="string" @bind-Value="@model.firstName" Required
						  Label="First Name" RequiredError="Please give your first name" />
			<MudTextField T="string" @bind-Value="@model.lastName" Required
						  Label="Last Name" RequiredError="Please give your last name" />
			<MudTextField @bind-Value="@model.contactNo" Required RequiredError="please provide your phone number"
                      Label="InputType.Telephone" Validation="@(new Func<string, string>(ValidPhone))"/>
		</MudForm>
	</MudCardContent>
	<MudCardActions>
		<MudButton Variant=Variant.Filled OnClick=RegisterUser Disabled="@(!success)" Class="ml-auto">
			Register
		</MudButton>
	</MudCardActions>
</MudCard>
